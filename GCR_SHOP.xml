	</test>

	<test name="GCR Shop Manufacturers Test_chrome">
		<parameter name="browser" value="chromium"></parameter>
		<classes>
			<class name="com.qa.adminTest.ManufacturersTest" />
		</classes>
	</test>

	<test name="GCR Shop Categories Test_chrome">
		<parameter name="browser" value="chromium"></parameter>
		<classes>
			<class name="com.qa.adminTest.CategoriesTest" />
		</classes>
	</test>

	<test name="GCR Shop Product Test_chrome">
		<parameter name="browser" value="chromium"></parameter>
		<classes>
			<class name="com.qa.adminTest.ProductTest" />
		</classes>
	</test>

</suite>
